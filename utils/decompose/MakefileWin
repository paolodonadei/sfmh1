CC=g++

INC = -I../../ -I. -I'$(MINGW)\include'
CFLAGS=$(INC) -c -g -Wall
LIBS=-lm  -lhrlib   -lhighgui -lcxcore -lcv -lboost_filesystem -lboost_system -lgsl
LDFLAGS=-L../../ -L'$(OPENCV_HOME)\lib'
SOURCES=decomp.cpp
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=decomp

all: $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@ $(LIBS)

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@
clean:
	rm  -f *.o core *.core $(EXECUTABLE).exe *~

