CC=g++
INC = -I../../ -I'$(MINGW)\include'
CFLAGS=$(INC) -c -g -Wall
LIBS=-lm  -lhrlib -lhighgui -lcxcore -lcv -lboost_filesystem -lboost_system -lgsl
LDFLAGS=-L../../ -L'$(MINGW)\lib'
SOURCES=selfcalib.cpp focallength.cpp nonlinSVDlvm.cpp
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=intrinsic


all: $(EXECUTABLE)



$(EXECUTABLE): $(OBJECTS)
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@ $(LIBS)


.cpp.o:
	$(CC) $(CFLAGS) $< -o $@
clean:
	del -f *.o core *.core $(EXECUTABLE).exe *~

