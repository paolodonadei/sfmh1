CC=g++
VPATH = .:utils/selfcalib
INC = -I../../ -I. -I'$(MINGW)\include'
CFLAGS=$(INC) -c -g -Wall
LIBS=-lm -llevmar  -lhighgui -lcxcore -lcv -lboost_filesystem -lboost_system  -lgsl -llapack -lblas -lf2c
LDFLAGS= -L'$(MINGW)\lib'
SOURCES=main.cpp argproc.cpp HRImage.cpp HRprimitives.cpp general.cpp pgmutils.cpp sift.cpp matching.cpp visiongen.cpp
OBJECTS=$(SOURCES:.cpp=.o) utils/selfcalib/focallength.o utils/selfcalib/nonlinSClvm.o
EXECUTABLE=sfmh1
PROJECT = libhrlib.a


all:  $(PROJECT) $(EXECUTABLE)


lib: $(PROJECT)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@ $(LIBS)


$(PROJECT): $(OBJECTS)
	ar rcs  $(PROJECT) $(OBJECTS)

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@

clean:
	del -f *.o core *.core $(EXECUTABLE).exe $(PROJECT) *~


cleandirs: clean
	$(MAKE) -C utils/fundutils -f MakefileWin clean
	$(MAKE) -C utils/decompose -f MakefileWin clean
	$(MAKE) -C utils/selfcalib -f MakefileWin clean


builddirs: all
	cd "utils/fundutils" && $(MAKE) -f MakefileWin
	cd "utils/decompose" && $(MAKE) -f MakefileWin
	cd "utils/selfcalib" && $(MAKE) -f MakefileWin

